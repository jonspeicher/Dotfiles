# .gitconfig is the user-specific configuration file for git.

[user]
    name = Jon Speicher
    email = jon.speicher@gmail.com

[core]
    autocrlf = input
    excludesfile = ~/.gitignore_global
    editor = vim

# TBD [credential] here

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

# TBD: Consider commonizing this with Windows by removing the shell function and the local and just
# using a shell command?
#
#    departures = !sh -c 'git difftool -y ${1:-master}...HEAD' -

[alias]
    departures = '!f() {
        local BRANCH = ${1:-master};
        git difftool -y $BRANCH...HEAD;
    }; f'

[merge]
    tool = opendiff
    summary = true
