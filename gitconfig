# .gitconfig is the user-specific configuration file for git.

[user]
    name = Jon Speicher
    email = jon.speicher@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
[alias]
    review = '!f() {
        local SHA = ${1:-HEAD};
        local BRANCH = ${2:-master};
        if [ $SHA == $BRANCH ];
            then SHA = HEAD;
        fi;
        git difftool -y $BRANCH...$SHA;
    }; f'
[merge]
    tool = opendiff
    summary = true
[core]
    autocrlf = input
    excludesfile = ~/.gitignore_global
    editor = vim
