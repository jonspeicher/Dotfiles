# .gitconfig is the user-specific configuration file for git.

[user]
    name = Jon Speicher
    email = jon.speicher@gmail.com

[core]
    autocrlf = input
    excludesfile = ~/.gitignore_global
    editor = vim

# TBD [credential] here

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[alias]
    departures = '!f() {
        local BRANCH = ${1:-master};
        git difftool -y $BRANCH...HEAD;
    }; f'

[merge]
    tool = opendiff
    summary = true
